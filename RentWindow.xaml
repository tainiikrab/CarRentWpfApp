                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DatePicker.CalendarStyle>
        </DatePicker>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="200,218,0,0" Width="100" Click="Return_click" BorderBrush="{x:Null}" Background="#FFB3E099" Height="32" VerticalAlignment="Top"/>

    </Grid>
</Window>
